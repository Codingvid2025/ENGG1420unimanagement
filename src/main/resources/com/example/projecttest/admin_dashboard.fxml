<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.projecttest.AdminController">
    <left>
        <VBox spacing="10" style="-fx-background-color: #2c3e50; -fx-padding: 20px;">
            <Label style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold; -fx-padding: 0 0 20px 0;" text="Admin Dashboard" />

            <Button onAction="#handleManageSubjects" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-min-width: 150px;" text="Manage Subjects" />
            <Button onAction="#handleManageStudents" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-min-width: 150px;" text="Manage Students" />
            <Button onAction="#handleManageFaculty" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-min-width: 150px;" text="Manage Faculties" />
            <Button onAction="#handleManageEvents" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-min-width: 150px;" text="Manage Events" />
            <Button onAction="#handleManageCourses" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-min-width: 150px;" text="Manage Courses" />

            <Region VBox.vgrow="ALWAYS" />

            <Button onAction="#handleLogout" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-min-width: 150px;" text="Logout" />
        </VBox>
    </left>

    <center>
        <StackPane>
            <Label fx:id="errorLabel" />
            <!-- Main content will go here -->
        </StackPane>
    </center>
    <right>
        <AnchorPane prefHeight="273.0" prefWidth="302.0" BorderPane.alignment="CENTER">
            <children>
                <Label layoutX="98.0" layoutY="128.0" text="Welcome admin" />
            </children>
        </AnchorPane>
    </right>
</BorderPane>
