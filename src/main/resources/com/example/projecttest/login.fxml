<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="346.0" prefWidth="448.0" spacing="20" style="-fx-background-color: #f4f4f4;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.projecttest.LoginController">
    <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333333;" text="University Management System" />
    <VBox alignment="CENTER" spacing="10" style="-fx-background-color: white; -fx-padding: 20px; -fx-border-radius: 10px; -fx-background-radius: 10px; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
        <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #555555;" text="Login" />
        <TextField fx:id="usernameField" prefWidth="354.0" promptText="Username" style="-fx-font-size: 16px; -fx-pref-width: 200px; -fx-pref-height: 40px;" />
        <PasswordField fx:id="passwordField" promptText="Password" style="-fx-font-size: 16px; -fx-pref-width: 200px; -fx-pref-height: 40px;" />
        <Button onAction="#handleLogin" style="-fx-font-size: 16px; -fx-pref-width: 300px; -fx-pref-height: 40px; -fx-background-color: #4CAF50; -fx-text-fill: white;" text="Login" />
        <Label fx:id="errorLabel" style="-fx-text-fill: red; -fx-font-size: 14px;" />
    </VBox>
</VBox>
