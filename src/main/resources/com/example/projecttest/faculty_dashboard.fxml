<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.projecttest.FacultyController">
    <left>
        <VBox spacing="10" style="-fx-background-color: #2c3e50; -fx-padding: 20px;">
            <Label style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold; -fx-padding: 0 0 20px 0;" text="Faculty Dashboard" />

            <Button onAction="#handleViewProfile" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-min-width: 150px;" text="View Profile" />
            <Button onAction="#handleViewCourses" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-min-width: 150px;" text="Assigned Courses" />
            <Button onAction="#handleViewStudents" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-min-width: 150px;" text="Student Lists" />

            <Region VBox.vgrow="ALWAYS" />

            <Button onAction="#handleLogout" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-min-width: 150px;" text="Logout" />
        </VBox>
    </left>

    <center>
        <StackPane>
            <Label fx:id="errorLabel" />
            <!-- Main content will go here -->
        </StackPane>
    </center>
   <right>
      <AnchorPane prefHeight="238.0" prefWidth="269.0" BorderPane.alignment="CENTER">
         <children>
            <Label layoutX="89.0" layoutY="111.0" text="Welcome Faculty" />
         </children>
      </AnchorPane>
   </right>
</BorderPane>
